<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="8dp"
    card:cardElevation="4dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Huésped -->
        <TextView
            android:id="@+id/tvGuestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huésped"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <!-- Hotel -->
        <TextView
            android:id="@+id/tvHotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGuestName"
            android:layout_marginTop="4dp"
            android:text="Hotel Sol"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <!-- Habitación -->
        <TextView
            android:id="@+id/tvRoomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHotelName"
            android:layout_marginTop="4dp"
            android:text="Hab. 101"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <!-- Fechas -->
        <TextView
            android:id="@+id/tvDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRoomNumber"
            android:layout_marginTop="4dp"
            android:text="12/05/25 – 14/05/25"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <!-- Menú contextual -->
        <ImageView
            android:id="@+id/btnBookingMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/menu_tres_puntos"
            android:contentDescription="Más opciones" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
