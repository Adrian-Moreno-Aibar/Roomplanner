<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    android:backgroundTint="@color/white"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Número -->
        <TextView
            android:id="@+id/roomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habitación 101"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <!-- Estado ocupación -->
        <TextView
            android:id="@+id/roomStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIBRE"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>

        <!-- Estado limpieza -->
        <TextView
            android:id="@+id/roomCleanStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpia"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Botón para cambiar limpieza -->
            <Button
                android:id="@+id/btnToggleClean"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Marcar sucia"
                android:textColor="@color/black"
                android:backgroundTint="@color/Cyan"/>

            <!-- Menú editar/borrar -->
            <ImageView
                android:id="@+id/btnRoomMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/menu_tres_puntos"
                android:layout_marginStart="8dp"
                android:contentDescription="Opciones"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
